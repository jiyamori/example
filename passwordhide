  <div class="container">
   Password: <input type="password" placeholder="enter password" id="myPassword" ><br>
    <input type="checkbox" placeholder="show" onclick="myFunction()"> Show Password
  </div>

</body>
<script>
  function myFunction(){
  var x = document.getElementById("myPassword");
  if (x.type== "password") {
    x.type = "text"
  } else {
    x.type= "password"
  }
}
</script>
